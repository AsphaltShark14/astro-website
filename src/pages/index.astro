---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import { indexTexts } from '../utils/texts';

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<div class="flex flex-col md:flex-row p-8">
				<div>
					<div class="flex flex-col gap-4 mb-3">
						<h1 class="text-sm md:text-xl font-semibold">&#128172 Garść informacji</h1>
						<p class="text-xs mr-4">
							{indexTexts.about}
						</p>
						<p class="text-xs mr-4">
							{indexTexts.info}
						</p>
					</div>
					<div>
						<h1 class="text-sm md:text-xl font-semibold mb-2">&#128172 Kanał YouTube</h1>
						<div class="flex sm:flex-row md:flex-col lg:flex-row">
							<a class="m-auto flex-1" href="https://www.youtube.com/@valldemarrwyzkiewicz7581" target="_blank">
								<button type="button" class="border focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center m-auto border-blue-500 text-blue-500 hover:text-white hover:bg-blue-600 focus:ring-blue-800">
									Kanał Youtube
								</button>
							</a>
							<p class="flex-1 text-xs mr-4 md:mt-3">
								{indexTexts.youtube}
							</p>
						</div>
						
					</div>
				</div>
				<img src="/camera-index.png" class="flex-1 w-64 h-48 sm:w-96 sm:h-64 lg:w-1/2 lg:h-1/2 m-auto mt-3 md:mt-0 rounded" />
			</div>

			


			

		</main>
	</body>
</html>

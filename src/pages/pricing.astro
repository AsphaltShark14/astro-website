---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import { pricingTexts } from '../utils/texts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="p-10">
					<div class="flex flex-col md:flex-row mb-6">
						<div class="flex-1">
							<h1 class="text-lg font-semibold">Montaż filmu</h1>
							<p class="text-xs text-justify mr-4">
								{pricingTexts.montage}
							</p>
							<h1 class="text-md font-semibold underline mt-4">&#128176; Cena: od 1000 zł netto</h1>
						</div>
						<img src="/montage-pricing.png" class="w-60 h-32 m-auto mt-3 md:mt-0 rounded-lg" />
					</div>
					<div class="flex flex-col-reverse md:flex-row mb-6">
						<img src="/filming-pricing.png" class="w-60 h-32 m-auto mt-3 md:mt-0 rounded-lg md:mr-4" />
						<div class="flex-1">
							<h1 class="text-lg font-semibold">Filmowanie z montażem</h1>
							<p class="text-xs text-justify">
								{pricingTexts.filming}
							</p>
							<h1 class="text-md font-semibold underline mt-4">&#128176; Cena: od 4000 zł netto</h1>
						</div>
					</div>
					<div class="flex flex-col md:flex-row">
						<div class="flex-1">
							<h1 class="text-lg font-semibold">Full pakiet</h1>
							<p class="text-xs text-justify  mr-4">
								{pricingTexts.full}
							</p>
							<h1 class="text-md font-semibold underline mt-4">&#128176; Cena: od 8000 zł netto</h1>
						</div>
						<img src="/full-pricing.png" class="w-60 h-32 m-auto mt-3 md:mt-0 rounded-lg" />
					</div>
			</div>
		</main>
	</body>
</html>

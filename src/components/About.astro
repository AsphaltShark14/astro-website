---
import { indexTexts, processTexts } from "../utils/texts";
import { Icon } from 'astro-icon'

---

<section id="about">
    <div class="flex flex-col lg:flex-row p-8 items-center lg:gap-32">
        <div>
            <div class="flex flex-col gap-4 mb-3">
                <div class="lg:w-96 m-auto">
                    <h1 class="text-xl md:text-6xl font-semibold">Zaufaj Vall De Marr Studio!</h1>
                    <p class="text-md mr-4 mt-3">
                        {indexTexts.about}
                    </p>
                <div class="flex justify-center mt-3">
                    <a class="m-auto" href="https://www.youtube.com/@valldemarrwyzkiewicz7581" target="_blank">
                        <button type="button" class="border focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center m-auto border-blue-500 text-blue-500 hover:text-white hover:bg-blue-600 focus:ring-blue-800">
                            Kanał Youtube
                        </button>
                    </a>
                    <a class="m-auto" href="#contact">
                        <button type="button" class="border focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center m-auto border-blue-500 text-blue-500 hover:text-white hover:bg-blue-600 focus:ring-blue-800">
                            Skontaktuj się!
                        </button>
                    </a>
                </div>
                </div>
            </div>
        </div>
        <div class="lg:bg-gradient-to-r from-[#2c3e50] to-[#bdc3c7] lg:p-8 lg:rounded-lg lg:shadow-md">
            <img src="/camera-index.png" class="w-64 h-48 sm:w-96 sm:h-64 m-auto rounded lg:relative inset-16 shadow-md" />
        </div>
    </div>
    <div class="bg-gradient-to-r from-[#bdc3c7] to-[#2c3e50] rounded-lg p-6">
        <h1 class="text-white text-md md:text-6xl font-semibold">Jak wygląda proces oraz przygotowanie do realizacji zlecenia?</h1>
        <div class="flex flex-col md:grid md:grid-cols-2 md:grid-rows-3 lg:grid-cols-3 lg:grid-rows-2 gap-6 lg:mx-10 mt-6">
            <div class="bg-white rounded w-full h-[200px] p-3">
                <div class="w-10 h-10 m-auto text-blue-500">
                    <Icon name="mdi:check-circle-outline" />
                </div>
                <p class="text-sm lg:text-md text-center mt-3">
                    {processTexts.individual}
                </p>
            </div>
            <div class="bg-white rounded w-full h-[200px] p-3">
                <div class="w-10 h-10 m-auto text-blue-500">
                    <Icon name="mdi:check-circle-outline" />
                </div>
                <p class="text-md text-center mt-3">
                    {processTexts.interview}
                </p>
            </div>
            <div class="bg-white rounded w-full h-[200px] p-3">
                <div class="w-10 h-10 m-auto text-blue-500">
                    <Icon name="mdi:check-circle-outline" />
                </div>
                <p class="text-md text-center mt-3">
                    {processTexts.befriend}
                </p>
            </div>
            <div class="bg-white rounded w-full h-[200px] p-3">
                <div class="w-10 h-10 m-auto text-blue-500">
                    <Icon name="mdi:check-circle-outline" />
                </div>
                <p class="text-md text-center mt-3">
                    {processTexts.film}
                </p>
            </div>
            <div class="bg-white rounded w-full h-[200px] p-3">
                <div class="w-10 h-10 m-auto text-blue-500">
                    <Icon name="mdi:check-circle-outline" />
                </div>
                <p class="text-md text-center mt-3">
                    {processTexts.montage}
                </p>
            </div>
            <div class="bg-white rounded w-full h-[200px] p-3">
                <div class="w-10 h-10 m-auto text-blue-500">
                    <Icon name="mdi:check-circle-outline" />
                </div>
                <p class="text-md text-center mt-3">
                    {processTexts.final}
                </p>
            </div>
        </div>
    </div>
    <div class="flex flex-col lg:flex-row mt-10">
        <div>
            <div class="w-16 h-16 lg:w-30 lg:h-30 m-auto text-red-500">
                <Icon name="mdi:youtube" />
            </div>
            <h1 class="text-xl md:text-6xl font-semibold mb-2 text-center">Kanał YouTube</h1>
        </div>
        <div>
            <p class="flex-1 text-xl text-justify md:text-left lg:mr-4 md:mt-3 w-3/4 m-auto">
                {indexTexts.youtube}
            </p>
            <div class="bg-gradient-to-r from-[#2c3e50] to-[#bdc3c7] rounded-lg w-fit lg:mt-40 lg:ml-40 shadow-lg m-auto mt-10">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/QvP7wgcM7hQ" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen class="relative lg:-inset-20 w-full sm:w-[560px] rounded shadow-md"></iframe>
            </div>
        </div>
    </div>
</section>
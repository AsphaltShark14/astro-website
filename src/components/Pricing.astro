---
import { pricingTexts } from "../utils/texts";

---

<section id="pricing">
    <div class="p-5 lg:p-10 mt-5 lg:mt-10">
        <h1 class="text-4xl md:text-6xl font-semibold mb-16 text-center">Cennik</h1>
        <div class="flex flex-col gap-10 lg:gap-16">
            <div class="flex flex-col md:flex-row mb-6 gap-6">
                <div class="flex-1 m-auto bg-slate-300 p-8 rounded-lg relative lg:left-32 lg:top-40 shadow-lg">
                    <h1 class="text-3xl md:text-5xl font-semibold mb-4">Montaż filmu</h1>
                    <p class="text-lg text-justify mr-4">
                        {pricingTexts.montage}
                    </p>
                    <h1 class="text-xl md:text-3xl font-semibold underline mt-4">&#128176; Cena: od 200 zł netto</h1>
                </div>
                <div>
                    <img src="/montage-pricing.png" class="w-64 h-36 lg:w-[640px] lg:h-[360px] m-auto mt-3 md:mt-0 rounded-lg" />
                </div>
            </div>
            <div class="flex flex-col-reverse md:flex-row mb-6 gap-6 lg:mt-32">
                <img src="/filming-pricing.png" class="w-64 h-36 lg:w-[720px] lg:h-[384px] m-auto mt-3 md:mt-0 rounded-lg" />
                <div class="m-auto bg-slate-300 p-8 rounded-lg relative lg:right-20 lg:top-32 shadow-lg">
                    <h1 class="text-3xl md:text-5xl font-semibold mb-4">Film i montaż</h1>
                    <p class="text-lg text-justify mr-4">
                        {pricingTexts.filming}
                    </p>
                    <h1 class="text-xl md:text-3xl font-semibold underline mt-4">&#128176; Cena: od 500 zł netto</h1>
                </div>
            </div>
            <div class="flex flex-col md:flex-row gap-6 lg:mt-52">
                <div class="m-auto bg-slate-300 p-8 rounded-lg relative lg:bottom-40 shadow-lg">
                    <h1 class="text-3xl md:text-5xl font-semibold mb-4">Full pakiet</h1>
                    <p class="text-lg text-justify mr-4">
                    {pricingTexts.full}
                    </p>
                    <h1 class="text-xl md:text-3xl font-semibold underline mt-4">&#128176; Cena: Indywidulana wycena</h1>
                </div>
                <img src="/full-pricing.png" class="w-60 h-32 lg:w-[720px] lg:h-[384px] m-auto mt-3 md:mt-0 rounded-lg" />
            </div>
        </div>
    </div>
</section>